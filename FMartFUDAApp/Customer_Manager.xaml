<Page x:Class="FMartFUDAApp.Customer_Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMartFUDAApp"
        mc:Ignorable="d"
        Title="Customer_Manager" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ KHÁCH HÀNG"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- KHU VỰC FORM (bên trái) -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Thông tin khách hàng"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,10" />

                <!-- Tên khách hàng -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Tên khách hàng:"/>
                    <TextBox x:Name="txtCustomerName" />
                </StackPanel>

                <!-- Số điện thoại -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Số điện thoại:"/>
                    <TextBox x:Name="txtCustomerPhone" />
                </StackPanel>

                <!-- Địa chỉ -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Địa chỉ:"/>
                    <TextBox x:Name="txtCustomerAddress" />
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Email:"/>
                    <TextBox x:Name="txtCustomerEmail" />
                </StackPanel>

                <!-- Nút Thêm, Cập nhật, Xoá -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="btnAdd"
                            Content="Thêm"
                            Width="80" Margin="0,0,10,0"
                            Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate"
                            Content="Cập nhật"
                            Width="80" Margin="0,0,10,0"
                            Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete"
                            Content="Xoá"
                            Width="80"
                            Click="btnDelete_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- KHU VỰC DANH SÁCH (bên phải) -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Danh sách khách hàng"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,10" />

                <DataGrid x:Name="dgCustomers"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Height="350" Width="519"
                          SelectionChanged="dgCustomers_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="50"/>
                        <DataGridTextColumn Header="Tên" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="SĐT" Binding="{Binding CustomerPhone}" Width="100"/>
                        <DataGridTextColumn Header="Địa chỉ" Binding="{Binding CustomerAddress}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding CustomerEmail}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
