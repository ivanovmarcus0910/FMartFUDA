<Window x:Class="FMartFUDAApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMartFUDAApp"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Background="#F5F5F5">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Customer Manager" Click="CustomerManagement"/>
            <MenuItem Header="Order Manager" Click="OrderManagement"/>
            <MenuItem Header="Order Manager History" Click="OrderManagementHistory"/>
            <MenuItem Header="Category Manager" Click="CategoryManagement"/>
            <MenuItem Header="Product Manager" Click="ProductManagement"/>
            <MenuItem Header="ManagerManagement" Click="FinancialManagement"/>
            <MenuItem Header="StaffManagement" Click="StaffManagement"/>
            <MenuItem Header="HistoryManagement" Click="HistoryManagement"/>
            
            


        </Menu>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </DockPanel>
</Window>
