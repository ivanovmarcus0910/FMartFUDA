<Page x:Class="FMartFUDAApp.OrderManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FMartFUDAApp"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="OrderManagement">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ ĐƠN HÀNG" FontSize="24" FontWeight="Bold"
                   Foreground="DarkBlue" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Form nhập liệu -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Mã đơn hàng:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtOrderID" FontSize="14" Margin="0,5,0,10"/>

                <TextBlock Text="Người mua:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtBuyer" FontSize="14" Margin="0,5,0,10"/>

                <TextBlock Text="Người tạo:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtCreator" FontSize="14" Margin="0,5,0,10"/>

                <TextBlock Text="Ngày tạo:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtCreatedDate" FontSize="14" Margin="0,5,0,10"/>

                <TextBlock Text="Tổng tiền:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtTotalAmount" FontSize="14" Margin="0,5,0,10"/>
            </StackPanel>

            <!-- Bảng danh sách đơn hàng -->
            <DataGrid x:Name="OrderGrid" Grid.Column="1" AutoGenerateColumns="False"
                      SelectionMode="Single" Margin="10" FontSize="14" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã đơn hàng" Binding="{Binding OrderId}" Width="*"/>
                    <DataGridTextColumn Header="Người mua" Binding="{Binding Buyer}" Width="*"/>
                    <DataGridTextColumn Header="Người tạo" Binding="{Binding Creator}" Width="*"/>
                    <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreatedDate, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount}" Width="*"/>
                    <DataGridTemplateColumn Header="Chi tiết">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Chi tiết" Click="btnDetail_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnCreate" Content="Thêm mới" Width="120" Height="40"
                    Margin="10" FontSize="14" Click="btnCreate_Click"/>
            <Button x:Name="btnUpdate" Content="Cập nhật" Width="120" Height="40"
                    Margin="10" FontSize="14" Click="btnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="Xóa" Width="120" Height="40"
                    Margin="10" FontSize="14" Click="btnDelete_Click"/>
            <Button x:Name="btnClose" Content="Đóng" Width="120" Height="40"
                    Margin="10" FontSize="14" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Page>
